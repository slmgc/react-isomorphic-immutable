{
  "private": true,
  "scripts": {
    "start": "npm run watch & nodemon app",
    "prestart": "npm i && npm ln ./app",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "$(npm bin)/stylus -w --include-css assets/bundle.styl -o public",
    "watch:js": "$(npm bin)/watchify app/client -o public/bundle.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "stage": 0,
          "optional": [
            "runtime"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "babel": "^5.8.23",
    "babelify": "^6.4.0",
    "classnames": "^2.2.0",
    "express": "^4.13.3",
    "history": "^1.12.5",
    "lodash": "^3.10.1",
    "nodemon": "^1.7.3",
    "react": "^0.14.0",
    "react-addons-pure-render-mixin": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-router": "^1.0.0-rc3",
    "stylus": "^0.52.4",
    "watchify": "^3.4.0"
  }
}
