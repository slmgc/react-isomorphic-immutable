.container
	margin: auto
	min-width: $xs
	max-width: $lg

	+media('sm')
		width: $sm

	+media('md')
		width: $md

.nav-link
	padding: $margin
	display: inline-block

	&:hover
		background-color: darken(white, 5)

	&.active
		background-color: darken(white, 10)

.alert
	margin: $margin auto
	padding: $margin
	color: white
	background: lightcoral

.input,
.button
	padding: $margin * 0.5

.input
	border: 1px solid lightgray

	.form-field &
		width: 100%

.form-field
	margin: $margin auto

.auth-form
	width: 300px

	+media('xs')
		width: auto